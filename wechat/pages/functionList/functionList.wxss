.bgctner{
  padding-top: 10rpx;
  text-align: left;
  flex-direction: column;
}

.moduless {
  position: relative;
  overflow: hidden;
  flex-direction: column;
}

.moduless:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.moduless:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.modules {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.title{
  text-align: left;
  font-family: 'HappyZcool-2016';
  font-size: 1rem;
  color: black;
  padding-top: 1rem;
  padding-left: 1rem;
}

.modules:before {
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
}
.modules:after{
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
}
.module {
  position: relative;
  float: left;
  padding: 10px 10px;
  width: 33.333333%;
  box-sizing: border-box;
}

.module:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 1px;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.module:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}



.icon {
  width: 90px;
  height: 90px;
  margin: 0 auto;
}

.icon image {
  display: block;
  width: 100%;
  height: 100%;
}

.text-container {
  display: block;
  text-align: center;
  color: #000;
  font-size: 15px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-family: 'HappyZcool-2016';
}

.icon + .text-container {
  margin-top: 2px;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  padding-top: 5px;
}
